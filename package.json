{
  "name": "@zerobounce/mcp",
  "version": "0.1.3",
  "description": "Model Context Protocol server for ZeroBounce email validation, verification, and intelligence. Provides comprehensive email validation, AI scoring, email finder, domain search, and bulk processing capabilities for AI coding assistants.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zerobounce-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:@modelcontextprotocol/sdk --banner:js='#!/usr/bin/env node' && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "node test-mcp.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "zerobounce",
    "email-validation",
    "email-verification",
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "email",
    "ai-tools",
    "cursor",
    "claude",
    "email-finder",
    "domain-search",
    "ai-scoring",
    "bulk-validation"
  ],
  "author": "ZeroBounce",
  "license": "Apache-2.0",
  "homepage": "https://github.com/zerobounce/zerobounce-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerobounce/zerobounce-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/zerobounce/zerobounce-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "@zerobounce/zero-bounce-sdk": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
